<!DOCTYPE html>
<html>
<head>
    <title>Perfume App - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar', { user: user }) %>
    <div class="container">
        <h1 class="mt-5 text-center">Welcome Back to Explorer Sauvage ðŸŒ¸</h1>
        <p class="text-center">Please log in to explore our luxurious fragrance collection.</p>

        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>

        <form action="/login" method="POST" class="mt-4">
            <div class="mb-3">
                <label for="email" class="form-label">Email Address:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-dark">Log In</button>
            </div>
        </form>

        <p class="text-center mt-3">
            New here? <a href="/register">Create an account</a> to start your perfume journey.
        </p>
    </div>
</body>
</html>

